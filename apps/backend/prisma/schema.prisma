generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

// generator custom_generator {
//   provider = "prisma-generator-fake-data"
//   /// by default, the file will be generated at `./prisma/fake-data.ts`
// }

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [uuidOssp(map: "uuid-ossp")]
}

// user roles
enum UserRole {
  ADMIN
  CUSTOMER
  MODERATOR
  MECHANIC
  REAGENT
}

// for mechanics
enum ApprovalStatus {
  PENDING
  ACCEPTED
  REJECTED
  REUPLOAD_REQUESTED
}

enum MechanicExperience {
  UnderOneYear
  UnderTwoYears
  UnderThreeYears
  UnderFiveYears
  MoreThanFiveYears
}

// vehicle enums
enum VehicleType {
  SEDAN
  HATCHBACK
  SUV
  TRUCK
  TRACTOR
}

enum VehicleFuelType {
  ELECTRIC
  GAS
  PETROL
  DIESEL
}

enum VehicleUseType {
  SPORT
  SEMISPORT
  COMMERCIAL
  NONCOMMERCIAL
}

enum VehicleWheels {
  TWO
  FOUR
}

enum Transmission {
  AUTOMATIC
  MANUAL
  HYBRID
}

// for Real estate agents

enum AreasOfSpecialization {
  RESIDENTIAL
  COMMERCIAL
  INDUSTRIAL
  LAND
}

enum RealEstateAgentExperience {
  UnderOneYear
  UnderTwoYears
  UnderThreeYears
  UnderFiveYears
  MoreThanFiveYears
}

// This is an enum for the condition of the property
enum PropertyCondition {
  EXCELLENT
  GOOD
  FAIR
  POOR
}

// This is an enum for the crime rate in the area
enum CrimeRate {
  HIGH
  MEDIUM
  LOW
}

// This is an enum for the neighborhood vibe
enum NeighborhoodVibe {
  FAMILY_FRIENDLY
  QUIET
  BUSTLING
  TRENDY
  OTHER
}

enum DealType {
  RENTAL
  LEASE
  PURCHASE
}

enum PurchaseReason {
  INVESTMENT
  RESIDENCE
  OTHER
}

enum OccupierType {
  FAMILY
  BACHELOR
}

enum PropertyType {
  APARTMENT
  CONDO
  LAND
  OFFICE_SPACE
  STANDALONE
  FARM_HOUSE
  PENT_HOUSE
  OTHER
}

model User {
  id              String           @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  ///FAKE: faker.firstName()
  firstName       String
  ///FAKE: faker.lastName()
  lastName        String
  ///FAKE: faker.phone()
  phoneNumber     String           @unique
  ///FAKE: faker.internet.email()
  email           String?          @unique
  isPhoneVerified Boolean?         @default(false)
  verifiedOn      DateTime?
  role            UserRole         @default(CUSTOMER)
  isBanned        Boolean?         @default(false)
  mechanic        Mechanic?
  customer        Customer?
  RealEstateAgent RealEstateAgent?

  savedAddresses Address[]
  // Timestamps
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@unique([id, phoneNumber])
  @@index([id])
  @@index([email])
  @@index([isPhoneVerified])
}

model RealEstateAgent {
  id String @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid

  description         String? @db.Text
  email               String  @unique
  residentialAddress  Address @relation(fields: [addressId], references: [id])
  profilePic          String
  rating              Float?  @default(0)
  level               Int?    @default(1)
  hasAgreedToPolicies Boolean

  realEstateLicenceNumber String
  abn                     String
  companyName             String?
  areaOfSpecialization    AreasOfSpecialization
  experience              RealEstateAgentExperience
  identificationDocument  String
  available               Boolean                   @default(false)

  deviceIds String[]
  user      User     @relation(fields: [userId, phoneNumber], references: [id, phoneNumber])

  userId                     String                       @unique @db.Uuid
  phoneNumber                String                       @unique
  // reviewId    String  @db.Uuid
  addressId                  String                       @db.Uuid
  RealEstateInspectionReport RealEstateInspectionReport[]
  RE_Booking                 RE_Booking[]
  RE_Order                   RE_Order[]
  ReAgentApprovalRequest     ReAgentApprovalRequest?
  StripeConnectAccount       StripeConnectAccount         @relation(fields: [stripeConnectAccountId], references: [id])
  stripeConnectAccountId     String                       @unique @db.Uuid

  @@unique([userId, phoneNumber])
  @@index([available])
  @@index([id])
  @@index([phoneNumber])
}

model ReAgentApprovalRequest {
  id                   String                    @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  status               ApprovalStatus
  ausIdentificationDoc String
  ABN                  String
  experience           RealEstateAgentExperience
  realEstateAgent      RealEstateAgent           @relation(fields: [agentId], references: [id])
  agentId              String                    @unique @db.Uuid

  @@unique([status, id, experience, ABN])
}

model Mechanic {
  id String @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid

  vehicleTypes    VehicleType
  vehicleFuelType VehicleFuelType
  vehicleUseType  VehicleUseType
  vehicleWheels   VehicleWheels
  approvalRequest ApprovalRequest?

  description         String?   @db.Text
  profilePic          String
  rating              Float?    @default(0)
  level               Int?      @default(1)
  reviews             Review[]
  hasAgreedToPolicies Boolean
  avv                 String?
  certifications      String[]
  licences            String[]
  available           Boolean   @default(false)
  deviceIds           String[]
  user                User      @relation(fields: [userId, phoneNumber], references: [id, phoneNumber])
  Booking             Booking[]

  userId                 String               @unique @db.Uuid
  phoneNumber            String               @unique
  Order                  Order[]
  // reviewId    String  @db.Uuid
  InspectionReport       InspectionReport?
  StripeConnectAccount   StripeConnectAccount @relation(fields: [stripeConnectAccountId], references: [id])
  stripeConnectAccountId String               @unique @db.Uuid

  @@unique([userId, phoneNumber])
  @@index([available])
  @@index([id])
  @@index([phoneNumber])
}

model StripeConnectAccount {
  id String @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid

  connectAcctId      String           @unique
  payoutsEnabled     Boolean
  bankAccountDetails Json[]
  bankAccountStatus  String
  requirements       Json
  mechanic           Mechanic?
  reAgent            RealEstateAgent?
  lastOrder          DateTime?
  lastMechOrder      Order?           @relation(fields: [lastMechOrderId], references: [id])
  lastMechOrderId    String?          @db.Uuid
  lastReAgentOrder   RE_Order?        @relation(fields: [lastReAgentOrderId], references: [id])
  lastReAgentOrderId String?          @db.Uuid
  totalEarnings      BigInt?

  @@index([connectAcctId])
}

model ApprovalRequest {
  id                             String             @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  status                         ApprovalStatus
  certificate_3                  String
  certificate_4                  String?
  publicLiabilityInsurance       String
  professionalIndemnityInsurance String?
  ausIdentificationDoc           String
  ABN                            String
  workshopAddress                Address?           @relation(fields: [addressId], references: [id])
  addressId                      String             @db.Uuid
  experience                     MechanicExperience
  Mechanic                       Mechanic           @relation(fields: [mechanicId], references: [id])
  mechanicId                     String             @unique @db.Uuid

  @@unique([status, id, experience, ABN])
}

model Review {
  id         String   @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  isVerified Boolean?
  message    String?
  rating     Float
  photos     String[]
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId String   @db.Uuid
  Mechanic   Mechanic @relation(fields: [mechanicId], references: [id])
  mechanicId String   @db.Uuid
}

model Customer {
  id                    String                 @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  profilePic            String?
  alternateNumber       String?
  user                  User                   @relation(fields: [userId, phoneNumber], references: [id, phoneNumber])
  cars                  Vehicle[]              @relation("Owner")
  bookings              Booking[]              @relation("BookingOwner")
  userId                String                 @unique @db.Uuid
  email                 String?                @unique
  phoneNumber           String                 @unique
  Order                 Order[]
  Review                Review[]
  StripeCustomerAccount StripeCustomerAccount?
  RE_Order              RE_Order[]
  RE_Booking            RE_Booking[]           @relation("RE_BookingOwner")
  Property              Property[]             @relation("InspectionFor")

  @@unique([userId, phoneNumber])
  @@index([id])
  @@index([phoneNumber])
}

model StripeCustomerAccount {
  id               String   @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  stripeCustomerId String
  paymentIntents   Json? // validate this fields externally (prisma doesn't support json schema's to validate on fields)
  paymentMethods   Json? // validate this fields externally (prisma doesn't support json schema's to validate on fields)
  customer         Customer @relation(fields: [customerId], references: [id])
  customerId       String   @unique @db.Uuid
}

model Address {
  id              String            @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  ///FAKE: faker.location.latitude()
  lat             Float
  ///FAKE: faker.location.longitude()
  long            Float
  ///FAKE: faker.location.zipCode('####')
  zipcode         String
  ///FAKE: faker.location.street()
  street          String
  suburb          String
  ///FAKE: faker.location.cityName()
  city            String
  state           String
  name            String?
  landmark        String?
  User            User?             @relation(fields: [userId], references: [id])
  userId          String?           @db.Uuid
  ApprovalRequest ApprovalRequest[]
  Vehicle         Vehicle[]
  RealEstateAgent RealEstateAgent[]
  Property        Property[]

  @@unique([street, suburb, city, zipcode])
  @@index([zipcode])
  @@index([suburb])
}

model Seller {
  id          String    @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  name        String
  ///FAKE: faker.person.lastName()
  lastname    String
  ///FAKE: faker.internet.email()
  email       String
  ///FAKE: faker.phone()
  phoneNumber String
  Vehicle     Vehicle[]
}

model Vehicle {
  id String @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid

  // Categorization
  carType    VehicleType
  fuelType   VehicleFuelType
  useType    VehicleUseType
  noOfWheels VehicleWheels

  // Relationships
  ownerId          String   @db.Uuid
  owner            Customer @relation("Owner", fields: [ownerId], references: [id])
  vehicleAddress   Address  @relation(fields: [vehicleAddressId], references: [id])
  vehicleAddressId String   @db.Uuid
  booking          Booking?
  seller           Seller?  @relation(fields: [sellerId], references: [id])
  sellerId         String?  @db.Uuid

  // Specifics
  make      String
  model     String
  year      String
  regNumber String

  @@index([id])
  @@index([ownerId])
}

model PropSeller {
  id          String     @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  name        String
  lastname    String
  email       String     @unique
  phoneNumber String     @unique
  Property    Property[]

  @@index([email])
  @@index([phoneNumber])
}

model Property {
  id String @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid

  // Categorization
  isResidential       Boolean
  isFrequentTraveller Boolean
  dealType            DealType
  propertyType        PropertyType
  purchaseReason      PurchaseReason
  occupierType        OccupierType

  // Relationships
  inspectionForId String   @db.Uuid
  inspectionFor   Customer @relation("InspectionFor", fields: [inspectionForId], references: [id])

  booking  RE_Booking? @relation(fields: [reBookingId], references: [id])
  seller   PropSeller? @relation(fields: [sellerId], references: [id])
  sellerId String?     @db.Uuid

  // Specifics
  propertyAddress   Address  @relation(fields: [propertyAddressId], references: [id])
  propertyAddressId String   @db.Uuid
  totalArea         String?
  numberOfRooms     Int?
  isNew             Boolean?
  reBookingId       String?  @db.Uuid

  @@index([id])
  @@index([inspectionForId])
}

model Booking {
  id                String            @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  owner             Customer          @relation("BookingOwner", fields: [ownerId], references: [id])
  ownerId           String            @db.Uuid
  package           Package           @relation(fields: [packageId], references: [id])
  packageId         String            @db.Uuid
  service           InspectionService @relation(fields: [inspectionServiceId], references: [id])
  vehicle           Vehicle           @relation(fields: [vehicleId], references: [id])
  vehicleId         String            @unique @db.Uuid
  mechanic          Mechanic?         @relation(fields: [mechanicId], references: [id])
  mechanicId        String?           @db.Uuid
  dateTimeOfBooking DateTime

  // Timestamps
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  inspectionServiceId String            @db.Uuid
  Order               Order[]
  InspectionReport    InspectionReport?
}

model Order {
  id           String   @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  initiatedBy  Customer @relation(fields: [customerId], references: [id])
  customerId   String   @db.Uuid
  package      Package  @relation(fields: [packageId], references: [id])
  packageId    String   @db.Uuid
  booking      Booking  @relation(fields: [bookingId], references: [id])
  bookingId    String   @unique @db.Uuid
  isFullfilled Boolean
  // paymentId given by the payments provider 
  paymentId    String?

  fulfilledBy          Mechanic?              @relation(fields: [mechanicId], references: [id])
  mechanicId           String?                @db.Uuid
  totalOrderValue      Int
  StripeConnectAccount StripeConnectAccount[]
}

model RE_Booking {
  id                String               @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  owner             Customer             @relation("RE_BookingOwner", fields: [ownerId], references: [id])
  ownerId           String               @db.Uuid
  package           RE_Package           @relation(fields: [packageId], references: [id])
  packageId         String               @db.Uuid
  service           RE_InspectionService @relation(fields: [inspectionServiceId], references: [id])
  agent             RealEstateAgent?     @relation(fields: [agentId], references: [id])
  agentId           String?              @db.Uuid
  dateTimeOfBooking DateTime

  // Timestamps
  createdAt                    DateTime                    @default(now())
  updatedAt                    DateTime                    @updatedAt
  inspectionServiceId          String                      @db.Uuid
  order                        RE_Order[]
  InspectionReport             RealEstateInspectionReport? @relation(fields: [realEstateInspectionReportId], references: [id])
  realEstateInspectionReportId String?                     @db.Uuid
  property                     Property[]
}

model RE_Order {
  id           String     @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  initiatedBy  Customer   @relation(fields: [customerId], references: [id])
  customerId   String     @db.Uuid
  package      RE_Package @relation(fields: [packageId], references: [id])
  packageId    String     @db.Uuid
  booking      RE_Booking @relation(fields: [bookingId], references: [id])
  bookingId    String     @unique @db.Uuid
  isFullfilled Boolean
  // paymentId given by the payments provider 
  paymentId    String?

  fulfilledBy          RealEstateAgent?       @relation(fields: [reAgentId], references: [id])
  reAgentId            String?                @db.Uuid
  totalOrderValue      Int
  StripeConnectAccount StripeConnectAccount[]
}

model InspectionReport {
  id                     String       @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  booking                Booking      @relation(fields: [bookingId], references: [id])
  bookingId              String       @unique @db.Uuid
  mechanic               Mechanic     @relation(fields: [mechanicId], references: [id])
  mechanicId             String       @unique @db.Uuid
  odometer               Int
  vehicleColor           String
  transmission           Transmission
  engineAndPeripherals   Json
  transmissionDrivetrain Json
  bodyStructure          Json
  interior               Json
  suspensionAndBrakes    Json
  wheelsAndTires         Json
  finalChecks            Json
  additionalComments     String       @db.Text()
  recommendation         Json
  url                    String
}

model RealEstateInspectionReport {
  id              String          @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  propertyAddress String
  inspector       RealEstateAgent @relation(fields: [inspectorId], references: [id])
  inspectorId     String          @db.Uuid
  inspectionDate  DateTime

  isAskingPriceCompetitive Boolean?
  isLegalOrZoningIssues    Boolean?
  isImmediateRepairsNeeded Boolean?
  isFutureDevelopmentPlans Boolean?
  isParkingAvailable       Boolean?
  proximityToMajorRoads    String?  @db.Text

  propertyInfo       Json
  nearbyFacilities   Json
  additionalInfo     Json
  overallCondition   PropertyCondition
  crimeRate          CrimeRate
  neighborhoodVibe   NeighborhoodVibe
  additionalComments String?
  reportUrl          String?
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  RE_Booking         RE_Booking[]
}

model InspectionService {
  id      String    @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  name    String    @unique
  Booking Booking[]
}

model RE_InspectionService {
  id       String       @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  name     String       @unique
  bookings RE_Booking[]
}

model Package {
  id          String    @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  bookings    Booking[]
  price       Int
  strikePrice Int?
  name        String    @unique
  description String    @db.Text
  items       String[]
  perks       String[]
  orders      Order[]
}

model RE_Package {
  id          String       @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
  price       Int
  strikePrice Int?
  name        String       @unique
  description String       @db.Text
  items       String[]
  perks       String[]
  RE_Booking  RE_Booking[]
  RE_Order    RE_Order[]
}

model Notification {
  id String @id @default(dbgenerated("public.uuid_generate_v4()")) @db.Uuid
}
